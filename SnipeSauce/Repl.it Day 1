def cf2
  print "Heads or tails?"
  response = gets.chomp

  options = ["heads", "tails"]
  pc_choice = options.sample
  puts "The computer flipped #{pc_choice}."
  if pc_choice = "heads"
    if response == "heads"
      puts "You guessed correctly!"
    else 
      puts "You did not guess correctly."
    end
  else pc_choice = "tails"
    if response == "tails"
      puts "You guessed correctly!"
    else 
      puts "You did not guess correctly."
    end
  end      
end






