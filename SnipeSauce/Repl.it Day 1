def greet
print "What is your name?"
name = gets.chomp
puts "Where are you from?"
home = gets.chomp
puts "Hello, #{name} from #{home}!"
end

#2
def password
print "What is the first name of your mom or dad?"
name = gets.chomp
puts "What is their age?"
age = gets.chomp
puts "Your password is #{name}#{age}."
end

